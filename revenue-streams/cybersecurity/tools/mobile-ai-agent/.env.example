# Environment Variables for Mobile AI Agent
# Copy this file to .env and fill in your actual values
# NEVER commit .env to git!

# ===================================================================
# AI Configuration (Mistral API)
# ===================================================================
MISTRAL_API_KEY=your_mistral_api_key_here

# ===================================================================
# Notification Services
# ===================================================================
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id

# ===================================================================
# Security Research APIs (Optional)
# ===================================================================
SHODAN_API_KEY=your_shodan_key
SECURITYTRAILS_API_KEY=your_securitytrails_key
VIRUSTOTAL_API_KEY=your_virustotal_key
CENSYS_ID=your_censys_id
CENSYS_SECRET=your_censys_secret

# ===================================================================
# GitHub Integration (Optional)
# ===================================================================
GITHUB_TOKEN=ghp_your_github_token

# ===================================================================
# Email Notifications (Optional)
# ===================================================================
SMTP_PASSWORD=your_gmail_app_password

# ===================================================================
# Security Settings
# ===================================================================
# Secret key for webhook signing (auto-generated if not set)
WEBHOOK_SECRET=your_webhook_secret_key

# Rate limiting
MAX_API_CALLS_PER_HOUR=100
MAX_COST_PER_DAY=5.0

# IP whitelist (comma-separated)
ALLOWED_IPS=127.0.0.1,::1

# ===================================================================
# Optional: HuggingFace (alternative to Mistral)
# ===================================================================
HUGGINGFACE_TOKEN=your_hf_token
